<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/HalfStream"
        android:layout_width="141dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:text="Half Stream"
        android:textColor="#FFBB3B"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20.09dp"
        android:layout_height="20.09dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="68dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_search_24" />

    <ImageView
        android:id="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="68dp"
        android:layout_width="20.09dp"
        android:layout_height="20.09dp"
        app:srcCompat="@drawable/ic_baseline_settings"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="20dp" />

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="87dp"
        android:background="#252525"
        android:layout_marginLeft="20dp"

        app:layout_constraintBottom_toTopOf="@+id/textVi"
        app:layout_constraintTop_toBottomOf="@+id/HalfStream"
        tools:layout_editor_absoluteX="17dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="From Channels You Follow"
            android:textColor="#D5D5D5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="355dp"
            android:layout_height="80dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <HorizontalScrollView
                android:id="@+id/ScrollView"
                android:layout_width="150dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="54dp"
                        android:layout_height="39dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@drawable/rohit" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4KGaming"
                            android:textColor="#FFFFFF"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/image1"
                            android:textSize="10sp" />
                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="54dp"
                        android:layout_height="39dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/four_k_gaming" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/image2"
                            android:text="Shroud"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp" />
                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="54dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/shroud" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ninja"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/image3"
                            android:textSize="10sp" />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="54dp"
                        android:layout_height="39dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ninja" />

                    </RelativeLayout>
                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textVi"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="500dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:text="Half Streams"
            android:textColor="#F5F5F5"
            android:textSize="23sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Half Stories"
            android:textColor="#757575"
            android:textSize="23sp" />
    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252525"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintBottom_toTopOf="@id/textView4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/home" />
        <TextView
        android:id="@+id/textView4"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:text="Home"
            android:textColor="#FFBB3B"
            android:textSize="9sp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginLeft="70dp"
        app:layout_constraintBottom_toTopOf="@id/textView5"
        app:layout_constraintLeft_toRightOf="@id/imageView4"
        app:srcCompat="@drawable/community" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:text="Home"
            android:textSize="9sp"
            android:textColor="#C1C0C9"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="130dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="48dp"
        android:layout_height="32.33dp"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/followed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="36dp"
        android:layout_height="32.07dp"
        android:layout_marginLeft="170dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/profile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="50dp"
            >


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="152dp"
            android:layout_height="123dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/circle"
             />
            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="36dp"
                android:layout_height="32.07dp"
                android:layout_marginLeft="138dp"
                android:src="@drawable/logo"
                android:layout_marginTop="40dp"
                />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toBottomOf="@+id/textVi"
        android:layout_marginBottom="100dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <GridLayout
                android:layout_width="385dp"
                android:layout_height="1237dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:columnCount="2"
                android:rowCount="10">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="401dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/ic_launcher_foreground" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="401dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/ic_launcher_foreground" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="401dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/ic_launcher_foreground" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="236dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/ic_launcher_foreground" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="401dp"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/ic_launcher_foreground" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="401dp"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/ic_launcher_foreground" />
                </androidx.cardview.widget.CardView>


            </GridLayout>


        </RelativeLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>